
@{
    ViewBag.Title = "POSReceipt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="content">
    <div class="container-fluid">

        <div class="row">
          
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary card-header-icon">
                        <div class="card-icon">
                            <i class="material-icons">assignment</i>
                        </div>
                        <h4 class="card-title">Receipt History</h4>
                    </div>
                    <div class="card-body">
                        <div class="card-body ">
                            <div class="row">
                                <label class="col-sm-2 col-form-label">Date From</label>
                                <div class="col-sm-2">
                                    <div class="form-group">
                                        <input type="date" class="form-control datepic datepicker" id="DateFrom" value="01/31/2021">
                                    </div>
                                </div>

                                <label class="col-sm-2 col-form-label">Date From</label>
                                <div class="col-sm-2">
                                    <div class="form-group">
                                        <input type="date" class="form-control datepic datepicker" id="DateTo" value="01/31/2021">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="material-datatables">
                            <table id="HistoryReceiptTable" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%"></table>
                        </div>
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
        <!-- end row -->
    </div>

</div>


<div class="modal fade bannerformmodal" tabindex="-1" role="dialog" aria-labelledby="bannerformmodal" aria-hidden="true" id="receiptdetailsModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>

                </div>
                <div class="modal-body fixed-modal-height div-chk-less-height">

                    <div class="row">
                        <div class="col-12">
                            <div class="material-datatables">
                                <table id="ReceiptTable" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%"></table>
                            </div>
                        </div>

                    </div>





                </div>
                <div class="modal-footer">
                    @*<button type="button" class="btn bg-blue btn-flat btn-block" id="updatePagebtn"><i class="fa fa-floppy-o"></i> Save</button>*@
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script src="~/Areas/Transaction/Javascript/POSReceipt.js"></script>

}

