
@{
    ViewBag.Title = "InboundOutbound";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary card-header-icon">
                        <div class="card-icon">
                            <i class="material-icons">assignment</i>
                        </div>
                        <h4 class="card-title">Items Module</h4>
                    </div>
                    <div class="card-body">
                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar              -->
                        </div>
                        <div class="material-datatables">
                            <table id="ItemTable" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%"></table>
                        </div>
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
        <!-- end row -->
    </div>

</div>


<div class="modal fade bannerformmodal" tabindex="-1" role="dialog" aria-labelledby="bannerformmodal" aria-hidden="true" id="StockModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>

                </div>
                <div class="modal-body fixed-modal-height div-chk-less-height">

                    <div class="row">
                        <div class="col-12">
                            <form id="StockForm" class="form-horizontal" action="#" method="">
                                <input type="hidden" class="form-control input-sm" name="ID" id="ID" readonly="">
                                <div class="card ">
                                    <div class="card-header card-header-rose card-header-text">
                                        <div class="card-text">
                                            <h4 class="card-title">Stocks</h4>
                                        </div>
                                    </div>
                                    <div class="card-body ">
                                        <div class="row">
                                            <label class="col-sm-2 col-form-label">Part/Stocks</label>
                                            <div class="col-sm-4">
                                                <div class="form-group">
                                                    @*<select class="selectpicker" data-style="select-with-transition" multiple title="Choose Category" data-size="7" id="ItemCategory"></select>*@
                                                    <select class="selectpicker" data-style="btn btn-default" id="StockType" name="StockType" title="Type">
                                                        <option value="Add"> Inbound </option>
                                                        <option value="Deduct"> Outbound </option>
                                                    </select>
                                                </div>
                                            </div>

                                            <label class="col-sm-2 col-form-label">Amount</label>
                                            <div class="col-sm-4">
                                                <div class="form-group">
                                                    <input class="form-control" type="text" name="Amount" id="Amount" required="true" />
                                                </div>
                                            </div>

                                        </div>


                                    </div>
                                    <div class="card-footer ml-auto mr-auto">
                                        <button type="submit" class="btn btn-success" id="Add_btn">Save</button>
                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>





                </div>
                <div class="modal-footer">
                    @*<button type="button" class="btn bg-blue btn-flat btn-block" id="updatePagebtn"><i class="fa fa-floppy-o"></i> Save</button>*@
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Areas/Transaction/Javascript/InboundOutbound.js"></script>
}

